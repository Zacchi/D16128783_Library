@model LibraryAppDIT.Models.Book
@{
    ViewBag.Title = "@Model.Title";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>@Model.Title</h2>


<br />
<p>
    @Html.ActionLink("Edit Book", "Update", "Books", new { id = Model.ISBN }, new { @class = "btn btn-primary" })
</p>

<br />
<br />
<ul>
    <li>Title: @Model.Title </li>
    <li>Genre: @Model.Genre </li>
    <li>Author: @Model.Author </li>
    <li>Published Year: @Model.publishedYear
</ul>