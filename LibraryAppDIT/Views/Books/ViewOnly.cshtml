@model IEnumerable<LibraryAppDIT.Models.Book>
@{
    ViewBag.Title = "ViewOnly";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section scripts
{
    <script>
        $(document).ready(function () {
            var table = $("#books").DataTable({
                ajax: {
                    url: "/api/books",
                    dataSrc: ""
                },
                columns: [
                    {
                        data: "Title"
                    },
                    {
                        data: "GenreType.Name"
                    },
                    {
                        data: "Author"
                    },
                    {
                        data: "publishedYear"
                    }
                ]
            });
        });
    </script>


    <script src="https://www.amcharts.com/lib/3/amcharts.js"></script>
    <script src="https://www.amcharts.com/lib/3/pie.js"></script>
    <script src="https://www.amcharts.com/lib/3/plugins/export/export.min.js"></script>
    <link rel="stylesheet" href="https://www.amcharts.com/lib/3/plugins/export/export.css" type="text/css" media="all" />
    <script src="https://www.amcharts.com/lib/3/themes/light.js"></script>
    <div id="chartPiedivBookGenres"></div>

    <link href="~/Content/Library.css" rel="stylesheet" />
    <script src="~/Scripts/PieChartOfBookGenres.js"></script>

}
<body onload="initializePieChartOfBookGenres();">

    <div align="center">
        <h2>Books</h2>
    </div>
    <br />
    <br />

    <table id="books" class="table table-bordered table-hover">
        <thead>
            <tr>
                <th>Title</th>
                <th>Genre</th>
                <th>Author</th>
                <th>Published Year</th>
            </tr>
        </thead>
        <tbody>

        </tbody>
    </table>

</body>

<br />
<div align="center">
    <h2>Book Genres</h2>
</div>
