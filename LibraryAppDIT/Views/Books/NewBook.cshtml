@model LibraryAppDIT.Models.Book

@{
    ViewBag.Title = "NewBook";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>New Book</h2>

@using (Html.BeginForm("Insert", "Books"))
{
    <div class="form-group">
        @Html.LabelFor(model => model.Title)
        @Html.TextBoxFor(model => model.Title, new { @class = "form-control" })
        @Html.ValidationMessageFor(model => model.Title)
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.Genre)
        @Html.TextBoxFor(model => model.Genre, new { @class = "form-control" })
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.Author)
        @Html.TextBoxFor(model => model.Author, new { @class = "form-control" })
        @Html.ValidationMessageFor(model => model.Author)
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.publishedYear)
        @Html.TextBoxFor(model => model.publishedYear, new { @class = "form-control" })
        @Html.ValidationMessageFor(model => model.publishedYear)
    </div>

    <button type="submit" class="btn btn-primary"> Create </button>

}

