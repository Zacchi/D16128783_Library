@model IEnumerable<LibraryAppDIT.Models.Customer>
@{
    ViewBag.Title = "LibraryCustomer";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section scripts
{
    <script>
        $(document).ready(function ()
        {
            var table = $("#members").DataTable({
                ajax: {
                    url: "/api/members",
                    dataSrc: ""
                },
                columns: [
                    {
                        data: "Name",
                        render: function (data, type, member) {
                            return "<a href='CxDetails/" + member.Id + "'>" + member.Name + "</a>";
                        }
                    },
                    {
                        data: "Address"
                    },
                    {
                        data: "Id",
                        render: function(data){
                            return "<button class='btn-link js-delete' data-member-id=" + data + ">Delete</button>";
                        }       
                    }
                ]
            });

            $("#members").on("click", ".js-delete", function () {

                var deleteBtn = $(this);

                if(confirm("Are you sure you want to delete this member?")){
                        $.ajax({
                            url: "/api/members/" + deleteBtn.attr("data-member-id"),
                            method: "DELETE",
                            success: function () {
                                table.row(deleteBtn.parents("tr")).remove().draw();
                            }
                        });
                    }
                });
            });
       // });

    </script>    
}

