@model IEnumerable<LibraryAppDIT.Models.Customer>
@{
    ViewBag.Title = "LibraryCustomer";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section scripts
{
    <script>
        $(document).ready(function ()
        {
            $("#customers").DataTable({
                ajax: {
                    url: "/api/customers",
                    dataSrc: ""
                },
                columns: [
                    {
                        data: "Name",
                        render: function (data, type, customer) {
                            return "<a href='~/Views/Customers/CxDetails/" + customer.Id + "'>" + customer.Name + "</a>";
                        }
                    },
                    {
                        data: "Address"
                    },
                    {
                        data: "id",
                        render: function(data){
                            return "<button class='btn-link js-delete' data-customer-id=" + data + ">Delete</button>";
                        }       
                    }
                ]
            });

            $("#customers .js-delete").on("click", function () {

                var deleteBtn = $(this);
                bootbox.confirm("Are you sure you want to delete the customer", function (hasAnswer) {
                    if (hasAnswer) {
                        $.ajax({
                            url: "/api/customers/" + deleteBtn.attr("data-customer-id"),
                            method: "DELETE",
                            success: function () {
                                table.row(deleteBtn.parents("tr")).remove().draw();
                                //deleteBtn.parents("tr").remove();
                            }
                        });
                    }
                });
            });
        });

    </script>    
}

