@model LibraryAppDIT.Models.Customer
@{
    ViewBag.Title = "Model.Name";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>@Model.Name</h2>  

<p><button class="btn btn-primary"> Edit </button></p>

<ul>

    <li>Address: @Model.Address </li>
    <li>Email: @Model.Email </li>
    <li>Phone Number: @Model.PhoneNumber </li>
    
    @if (Model.DOB != null)
    {
        <li>Date Of Birth: @Model.DOB.ToShortDateString()</li>
    }

</ul>
