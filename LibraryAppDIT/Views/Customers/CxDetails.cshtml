@model LibraryAppDIT.Models.Customer
@{
    ViewBag.Title = "Model.Name";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>@Model.Name</h2>  

<br />
<p>
    @Html.ActionLink("Edit Member", "Update", "Customers", new {id = Model.Id}, new { @class = "btn btn-primary" })
</p>

_______________________________________________________________________________________________________________

<br />
<br />
<ul>

    <li>Address: @Model.Address </li>
    <li>Email: @Model.Email </li>
    <li>Phone Number: @Model.PhoneNumber </li>
    
    @if (Model.DOB != null)
    {
        <li>Date Of Birth: @Model.DOB.ToShortDateString()</li>
    }

</ul>
